<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#000000" >

<GridLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="6" >

    <TextView
        android:textColor="#FFFFFF"
        android:id="@+id/textViewconname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:text="Constituency Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:textColor="#FFFFFF"
        android:id="@+id/textView1"
        android:layout_column="0"
        android:layout_marginTop="5dip"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:text="Population"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:textColor="#FFFFFF"
        android:id="@+id/textView2"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:text="Male Voters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:textColor="#FFFFFF"
        android:id="@+id/textView3"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_row="4"
        android:text="Female Voters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:textColor="#FFFFFF"
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="left|top"
        android:layout_row="5"
        android:text="candidates"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:textColor="#FFFFFF"
        android:id="@+id/textViewpopulation"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="2"
        android:text="6015656"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" />
     <TextView
         android:textColor="#FFFFFF"
        android:id="@+id/textViewmalevoters"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="3"
        android:text="601565"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" />
      <TextView
          android:textColor="#FFFFFF"
        android:id="@+id/textViewfemalevoters"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="4"
        android:text="f5484845"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" />

      

</GridLayout>

<ListView
    android:id="@+id/listViewcon_cand"

    android:layout_width="wrap_content"
    android:layout_height="match_parent"
        android:background="#F8F8F8"
         android:dividerHeight="1dip"
        android:divider="#B8B8B8"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:layout_marginTop="2dip"
        android:layout_marginBottom="2dip"
         android:textAlignment="gravity" >
</ListView>

</LinearLayout>